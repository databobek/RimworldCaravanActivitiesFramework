<Defs>
  <CaravanActivities.CaravanActivityDef>
    <defName>ideologyActivity</defName>
    <label>Spread Ideology</label>
    <description>Spread your ideology to other factions</description>
    <nearFactionBase>true</nearFactionBase>
    <options>
      <li>ideologyOption</li>
    </options>
    <icon>UI/Commands/GatherSpotActive</icon>
    <mapIcon>World/WorldObjects/Expanding/VillageTemporary</mapIcon>
  </CaravanActivities.CaravanActivityDef>

  <CaravanActivities.OptionDef>
    <defName>ideologyOption</defName>
    <label>Spread ideology nearby</label>
    <negativeOutcomeChance>80</negativeOutcomeChance>
    <requiredTimeInDays>7</requiredTimeInDays>
    <goodOutcomes>
      <ideologyOutcome>100</ideologyOutcome>
    </goodOutcomes>
    <badOutcomes>
      <ideologyFail>100</ideologyFail>
    </badOutcomes>
  </CaravanActivities.OptionDef>

  <CaravanActivities.OutcomeDef>
    <defName>ideologyOutcome</defName>
    <changeIdeology>true</changeIdeology>
  </CaravanActivities.OutcomeDef>

  <CaravanActivities.OutcomeDef>
    <defName>ideologyFail</defName>
    <description>Spreading ideology failed</description>
    <nearestFactionRelationshipChange>-10</nearestFactionRelationshipChange>
  </CaravanActivities.OutcomeDef>

</Defs>