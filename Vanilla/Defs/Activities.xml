<Defs>
  <CaravanActivities.CaravanActivityDef>
    <defName>helpActivity</defName>
    <label>Offer help</label>
    <description>Offer help to the nearby faction base.</description>
    <nearFactionBase>true</nearFactionBase>
    <options>
      <li>helpLowOption</li>
      <li>helpMediumOption</li>
      <li>helpHighOption</li>
    </options>
    <icon>UI/Commands/OfferGifts</icon>
    <mapIcon>World/WorldObjects/Expanding/PeaceTalks</mapIcon>
  </CaravanActivities.CaravanActivityDef>

  <CaravanActivities.OptionDef>
    <defName>helpLowOption</defName>
    <label>Take responsibility for low effort, unskilled labor.</label>
    <negativeOutcomeChance>5</negativeOutcomeChance>
    <requiredTimeInDays>3</requiredTimeInDays>
    <goodOutcomes>
      <helpLowOutcome>100</helpLowOutcome>
    </goodOutcomes>
    <badOutcomes>
      <helpLowFail>100</helpLowFail>
    </badOutcomes>
  </CaravanActivities.OptionDef>

  <CaravanActivities.OutcomeDef>
    <defName>helpLowOutcome</defName>
    <nearestFactionRelationshipChange>10</nearestFactionRelationshipChange>
    <items>
      <Silver>50~100</Silver>
    </items>
  </CaravanActivities.OutcomeDef>

  <CaravanActivities.OutcomeDef>
    <defName>helpLowFail</defName>
    <nearestFactionRelationshipChange>-10</nearestFactionRelationshipChange>
  </CaravanActivities.OutcomeDef>

  <CaravanActivities.OptionDef>
    <defName>helpMediumOption</defName>
